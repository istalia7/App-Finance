{% extends 'base.html.twig' %} {% block title %}Page Revenu{% endblock %} {%
block body %}
<div class="container h-dvh w-9/12 mx-auto">
  <table class="border border-[#1B1725] bg-[#A499B3] mt-16 w-full">
    <thead class="w-full">
      <tr class="">
        <th class="border-r border-r-[#534B62] px-4">Date</th>
        <th class="border-r border-r-[#534B62] px-4">Revenus</th>
        <th class="border-r border-r-[#534B62] px-4">Montant économisé</th>
        <th class="px-8">Montant hobbies</th>
      </tr>
    </thead>
    {% for revenu in revenus %}
    <tbody class="text-[#534B62]">
      <tr>
        <td>{{ revenu.dateRevenu|date("j F, Y", "Europe/Paris") }}</td>
        <td>{{ revenu.montant }}€</td>
        <td>{{ revenu.economie }}€</td>
        <td>{{ revenu.montant - revenu.economie }}€</td>
      </tr>
    </tbody>
    {% endfor %}
  </table>
</div>
{% endblock %}
